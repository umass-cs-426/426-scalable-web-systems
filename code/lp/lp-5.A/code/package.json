{
  "name": "lp-5a-microservices",
  "version": "1.0.0",
  "description": "Lesson Practice 5.A: Synchronous Microservices System with Node.js and FastAPI",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start:gateway": "nodemon --watch api-gateway --exec ts-node api-gateway/index.ts",
    "start:a": "nodemon --watch service-a --ext ts --exec ts-node service-a/index.ts",
    "start:b": "nodemon --watch service-b --ext ts --exec ts-node service-b/index.ts",
    "start:c": "npm --prefix service-c run serve",
    "start:d": "nodemon --watch service-d --ext ts --exec ts-node service-d/index.ts",
    "start:registry": "nodemon --watch registry --ext ts --exec ts-node registry/index.ts",
    "start:all": "concurrently -n gateway,a,b,c,d,registry -c blue,green,magenta,red,yellow,cyan \"npm run start:gateway\" \"npm run start:a\" \"npm run start:b\" \"npm run start:c\" \"npm run start:d\" \"npm run start:registry\"",
    "start:test": "ts-node requests.ts",
    "start:autocannon": "ts-node autocannon.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pino": "^8.17.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.1",
    "autocannon": "^8.0.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3"
  }
}
